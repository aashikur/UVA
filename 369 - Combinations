#include <stdio.h>

int main()
{
    int i,N,M;
    long long int  sum,sum2;


    while(1)
    {
        scanf("%d %d",&N,&M);
        if(N==0 && M==0) break;

        sum = 1,sum2 = 1;

        for( i = N-M + 1; i<=N; i++)
        {
            sum *= i;
        }
        for(i = 1 ; i<=M; i++)
        {
            sum2 *=i;
        }

        printf("%d things taken %d at a time is %lld exactly.\n",N,M,sum/sum2);
    }

    return 0;
}
